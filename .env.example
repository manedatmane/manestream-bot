# Manestream Bot Configuration
# Copy this to .env and fill in your values

# ====================
# REQUIRED
# ====================

# Chat server URL
CHAT_SERVER_URL=http://localhost:3000

# Bot authentication key (must match chat server's BOT_API_KEY)
BOT_API_KEY=your-bot-api-key-here

# ====================
# BOT IDENTITY
# ====================

BOT_USERNAME=FishBot
BOT_DISPLAY_NAME=üêü FishBot
BOT_AVATAR=https://i.imgur.com/yourbot.png

# ====================
# PERMISSIONS
# ====================

# Comma-separated list of admin usernames
ADMIN_USERS=bong,saiyajin,north

# ====================
# GAME SETTINGS
# ====================

# Starting balance for new users
STARTING_BONGBUX=100

# Seconds between fishing attempts
FISH_COOLDOWN=30

# Gambling win rate (0.0 to 1.0)
GAMBLE_WIN_RATE=0.45

# ====================
# GOOGLE SHEETS (for !commands list)
# ====================

# Your Google Sheet ID (from the URL)
# Example URL: https://docs.google.com/spreadsheets/d/1rbfLU0lJJ23q-WvuvQLg7gX1_59cPzrbuaYkwk97QEY/edit
# The ID is: 1rbfLU0lJJ23q-WvuvQLg7gX1_59cPzrbuaYkwk97QEY
GOOGLE_SHEET_ID=1rbfLU0lJJ23q-WvuvQLg7gX1_59cPzrbuaYkwk97QEY

# Also put your Google service account credentials.json in the data/ folder
# See: https://docs.gspread.org/en/latest/oauth2.html#for-bots-using-service-account

# Fallback URL if Google Sheets is not configured
COMMANDS_SPREADSHEET_URL=https://docs.google.com/spreadsheets/d/1rbfLU0lJJ23q-WvuvQLg7gX1_59cPzrbuaYkwk97QEY/edit

# ====================
# API KEYS (Optional)
# ====================

# GIPHY - https://developers.giphy.com/
GIPHY_API_KEY=

# Tenor - https://developers.google.com/tenor
TENOR_API_KEY=

# OMDB (movie info) - https://www.omdbapi.com/apikey.aspx
OMDB_API_KEY=

# ====================
# ADVANCED
# ====================

# Command prefix
COMMAND_PREFIX=!

# Max message length
MAX_MESSAGE_LENGTH=500

# Reconnection delay (seconds)
RECONNECT_DELAY=5
MAX_RECONNECT_DELAY=60

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
